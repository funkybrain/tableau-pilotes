<!-- ADMIN MISSION -->
<% if @page=='mission' %>

   <h2>Ajouter une mission</h2>
    <form action="/admin/mission" method="post">  
      Choisir une campagne:
      <select name="choix_campagne">
        <% @campagnes.each do |c| %>
          <option value="<%= c.id %>"> <%=h c.nom %> </option>
        <% end %>
      </select>
      <br>
      <textarea name="numero" placeholder="numero de mission"></textarea>
      <textarea name="nom" placeholder="nom de la mission"></textarea>
      
      <br>
      <textarea name="briefing" placeholder="briefing"></textarea>
      <textarea name="debriefing" placeholder="debriefing"></textarea>
      
      <input type="submit" value="Ajouter Mission!">  
    </form>  
 

