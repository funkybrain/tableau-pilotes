<!-- ADMIN ATTRIBUTION MEDAILLE-->
<% if @page=='attribution' %>
  <h2> A quelle autruche voulez vous attribuer une recompense? </h2>
  <form action="/admin/attribution" method="post">
    <select name="choix_autruche">
      <% @autruches.each do |a| %>
        <option value="<%= a.id %>"> <%= a.id %>-<%=h a.callsign %> </option>
      <% end %>
    </select>
    <input type="submit" value="Go!"/>


<% end %>

<% if @page=='campagne' %>

   <h2>Ajouter une campagne</h2>
    <form action="/admin/campagne" method="post">  
      <textarea name="nom" placeholder="titre campagne"></textarea>
      <textarea name="descriptif" placeholder="descriptif campagne"></textarea>
      <input type="submit" value="Ajouter Campagne!">  
    </form>  
 

  <h2> Liste des campagnes</h2>
  <table id="hor-minimalist-a" summary="Main Table">
    <!-- Table header -->
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col" id="titre">Titre</th>
        <th scope="col" id="descriptif">Descriptif</th>
       </tr>
    </thead>
    
    <!-- Table body -->
    <tbody>
    <% i=1 %>
    <% @campagnes.each do |campagne| %> 
      <tr>
        <td>
          <%= i %>
        </td>
        <td>
          <%=h campagne.nom %>
        </td>
        <td>
          <%=h campagne.descriptif %>
        </td>
        <td>
          <span><a href="/<%= campagne.id %>">[edit]</a></span>  
        </td>
        <td>
          <class="meta"><%= campagne.created_at.strftime("Created: %m/%d/%Y") %>
        </td>  
      </tr>
      <% i=i+1 %>
      <% end %>
    </tbody>  
  </table>

<% end %>


